{
    // Overrides
    // "projectManager.vscode.baseFolders": [],
    // "projectManager.git.baseFolders": [],

    // Window
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "window.title": "${rootName}",

    // WorkBench
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    
    // Editor
    "editor.fontFamily": "Source Code Pro, Menlo, Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": false,
    "editor.wordWrap": "off",
    "editor.minimap.enabled": true,
    // "editor.formatOnSave": true,

    // Explorer
    "explorer.autoReveal": false,

    // CodeLens
    "typescript.referencesCodeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,

    // Language Helpers
    "typescript.autoImportSuggestions.enabled": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "never",

    // Source Control
    "diffEditor.ignoreTrimWhitespace": true,
    "git.autofetch": true,

    // Files
    "files.eol": "\n",
    "files.associations": {
        "Vagrantfile": "ruby",
        ".prettierrc": "yaml"
    },

    // Search
    "search.exclude": {
        "**/node_modules": false,
        "**/bower_components": false
    },

    // Projects
    "projectManager.vscode.maxDepthRecursion": 1,
    "projectManager.git.maxDepthRecursion": 1,
    "projectManager.treeview.visible": false,

    // Barrelr
    "barrelr.useDoubleQuotes": true,
    "barrelr.excludeFileRegex": "(\\.spec\\.|\\.test\\.|\\.e2e\\.|\\.ava\\.)",
    
    // Prettier
    "prettier.requireConfig": true,
    "prettier.disableLanguages": [
        "vue",
        "json"
    ],

    // Misc
    "liveshare.guestApprovalRequired": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "material-icon-theme.showUpdateMessage": false,
    "gitlens.gitExplorer.files.layout": "auto",
    "gitlens.keymap": "chorded",
    "gitlens.historyExplorer.enabled": true,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },
    "workbench.editor.closeEmptyGroups": false,
    "extensions.recommendations": [
        "alefragnani.project-manager",
        "Angular.ng-template",
        "coenraads.bracket-pair-colorizer",
        "digitalbrainstem.javascript-ejs-support",
        "dotjoshjohnson.xml",
        "eamodio.gitlens",
        "EditorConfig.editorconfig",
        "eg2.tslint",
        "esbenp.prettier-vscode",
        "infinity1207.angular2-switcher",
        "johnpapa.angular2",
        "mikael.angular-beastcode",
        "mikerhyssmith.ts-barrelr",
        "mrcrowl.easy-less",
        "ms-vsliveshare.vsliveshare",
        "msjsdiag.debugger-for-chrome",
        "oliversturm.fix-json",
        "peterjausovec.vscode-docker",
        "pkief.material-icon-theme",
        "tomoki1207.vscode-input-sequence",
        "Tyriar.sort-lines",
        "wayou.vscode-todo-highlight",
        "xabikos.javascriptsnippets",
    ],
}
